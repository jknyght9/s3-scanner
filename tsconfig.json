{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
